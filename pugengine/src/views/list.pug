html 
    head
        title='Lista de productos'
    body
        a(href='/') Agregar producto
        h1='Lista de productos'
        hr
        if products.length>0
            table 
                tr 
                    th='#ID'
                    th='Nombre'
                    th='Precio'
                    th='Imagen'
                for producto in products
                    tr
                        td=producto.id
                        td=producto.title
                        td=producto.price
                        td=''
                            img(src=producto.thumbnail, height='20px', width='20px')
        else 
            h2='No hay productos :('
                
            
                